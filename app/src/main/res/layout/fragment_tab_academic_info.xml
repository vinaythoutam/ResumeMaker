<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education Information"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

        <View style="@style/Divider" />

        <TextView
            android:id="@+id/pgTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="* Post Graduation"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <CheckBox
            android:id="@+id/pgNotYet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Graduation? Not Yet! "
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pgBoardET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="University"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pgNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Institute/College Name"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/pgYearET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:id="@+id/pgPersuing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persuing"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/pgPercentageET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Percentage%"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="* Graduation"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/gradBoardET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="University"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/gradNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Institute/College Name"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/gradYearET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:id="@+id/gradPersuing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persuing"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/gradPercentageET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Percentage%"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="* Class XII / Diploma"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/collegeBoardET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Inter/10+2/Diploma"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/collgeNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Institute/College Name"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/collegeYearET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/percentageColET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="%"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="* Class X"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/schoolBoardET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SSC/CBSE/CISCE"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/schoolNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SchoolName"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/schoolYearET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/percentageSclET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="%/CGPA"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/aiSaveBtn"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/save_btn"
            android:text="save"/>
        <Button
            android:id="@+id/aiUpdateBtn"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/save_btn"
            android:text="update"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>